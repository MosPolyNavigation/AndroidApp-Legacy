<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MospolytechGid" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/grey_dark</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <!--<item name="colorSecondary">@color/teal_200</item>-->
        <!--<item name="colorSecondaryVariant">@color/teal_700</item>-->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Edit_text_Cabinet">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
    
    <style name="button_choose_room_on_map">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">@color/grey_dark2</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BACKGROUNDTINT">
        <item name="android:backgroundTint">@color/grey_black</item>
    </style>

    <style name="MENU">
        <item name="android:background">@color/grey_black</item>
    </style>
    <!--фон у этажей-->
    <style name="FLOOR">
        <item name="background">@color/grey_dark</item>
    </style>
    <style name="BACKGROUND">
